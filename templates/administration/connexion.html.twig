{% extends "base.html.twig" %}

{% block nav %}{% endblock %}
{% block title %}Identification{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form class="login" action="{{ path('app_login') }}" method="post">
        <div>Pseudo : </div>
        <div><input type="text" name="_username" value="{{ csrf_token('authenticate') }}"/></div>
        <div>Mot de Passe : </div>
        <div><input type="password" name="_password"/></div>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <div><button class="bouton" type="submit">Se connecter</button></div>
        <div><a href="{{ path('home') }}">Retour à l'accueil</a> | <a>Mot de passe oublié</a></div>
    </form>
{% endblock %}