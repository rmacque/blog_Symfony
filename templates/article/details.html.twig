{% extends 'article/base.html.twig' %}

{% block title %}{{ article.nomArticle }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ article.nomArticle }}</h1>
    <p>{{ article.contenu }}</p>
    <div>{{ article.dateCreation.format("d-m-Y") }}</div>
    <div>
    {% for categorie in article.categories %}
        <span>#{{categorie.nomCategorie}}</span>
    {% endfor %}
    </div>
    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('article_edition', {id: article.id}) }}">Editer</a>
    {% endif %}
</div>
{% endblock %}
